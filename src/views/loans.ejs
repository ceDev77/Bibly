<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bibly - <%= user && user.role === 'admin' ? 'Gestão de Empréstimos' : 'Meus Empréstimos' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <%- include('partials/navbar') %>

    <main class="flex-grow py-10">
        <div class="max-w-[95%] mx-auto px-4">
            <% if (typeof user !== 'undefined' && user && user.name !== 'Visitante') { %>
                <header class="text-center mb-10">
                    <h1 class="text-4xl font-extrabold text-gray-900 mb-2 italic uppercase">
                        <%= user.role === 'admin' ? 'Empréstimos Realizados' : 'Meus Empréstimos' %>
                    </h1>
                    <p class="text-lg text-gray-600 font-medium italic">
                        <%= user.role === 'admin' ? 'Controle total dos fluxos de saída e entrada de exemplares.' : 'Acompanhe seus prazos e devoluções.' %>
                    </p>
                </header>

                <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden">
                    <div class="p-6 border-b border-gray-100 bg-gray-50/50 flex justify-center">
                        <div class="relative w-full md:w-96">
                            <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                            <input type="text" id="userSearch" 
                                placeholder="<%= user.role === 'admin' ? 'Buscar por nome de usuário ou código ID' : 'Buscar por nome do livro ou código ID' %>" 
                                class="w-full pl-12 pr-4 py-3 rounded-2xl border-2 border-gray-100 focus:border-indigo-500 focus:ring-0 transition-all font-medium italic">
                        </div>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="bg-white text-gray-400 text-xs font-black uppercase tracking-widest border-b border-gray-100">
                                    <th class="px-6 py-5">CÓDIGO</th>
                                    <th class="px-6 py-5">LIVRO</th>
                                    <th class="px-6 py-5">USUÁRIO</th>
                                    <th class="px-6 py-5">DATA EMPRÉSTIMO</th>
                                    <th class="px-6 py-5">DATA DEVOLUÇÃO</th>
                                    <th class="px-6 py-5">STATUS</th>
                                    <th class="px-6 py-5">VALOR</th>
                                    <th class="px-6 py-5">MULTA</th>
                                    <% if (user.role === 'admin') { %>
                                        <th class="px-6 py-5">AÇÕES</th>
                                    <% } %>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-50">
                                <% loans.forEach(loan => { %>
                                    <tr class="loan-row hover:bg-gray-50/80 transition-colors group">
                                        <td class="px-6 py-5 font-mono font-black text-indigo-600 loan-id-cell">
                                            #<%= loan.id.toString().padStart(5, '0') %>
                                        </td>
                                        <td class="px-6 py-5">
                                            <p class="font-black text-gray-900 italic uppercase book-title text-sm"><%= loan.book_title %></p>
                                        </td>
                                        <td class="px-6 py-5 user-name-cell">
                                            <% if (user.role === 'admin') { %>
                                                <a href="/usuarios/<%= loan.user_id %>" class="font-bold text-indigo-600 hover:underline italic">
                                                    <%= loan.user_name %>
                                                </a>
                                            <% } else { %>
                                                <span class="font-bold text-gray-700 italic"><%= loan.user_name %></span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-5 text-gray-500 font-medium"><%= loan.loan_date %></td>
                                        <td class="px-6 py-5 text-gray-900 font-black italic"><%= loan.due_date %></td>
                                        <td class="px-6 py-5">
                                            <% if (loan.status === 'fechado') { %>
                                                <span class="px-3 py-1 bg-gray-100 text-gray-500 rounded-full text-[10px] font-black uppercase tracking-tighter">Concluído</span>
                                            <% } else if (loan.status === 'vencido') { %>
                                                <span class="px-3 py-1 bg-red-100 text-red-600 rounded-full text-[10px] font-black uppercase tracking-tighter animate-pulse">Vencido</span>
                                            <% } else { %>
                                                <span class="px-3 py-1 bg-green-100 text-green-600 rounded-full text-[10px] font-black uppercase tracking-tighter">Ativo</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-5 font-black text-gray-900">R$ <%= loan.total_price.toFixed(2).replace('.', ',') %></td>
                                        <td class="px-6 py-5 font-black text-red-600 italic">R$ <%= loan.fine %></td>
                                        <% if (user.role === 'admin') { %>
                                            <td class="px-6 py-5">
                                                <% if (loan.status !== 'fechado') { %>
                                                    <form action="/emprestimos/<%= loan.id %>/fechar" method="POST" class="form-fechar">
                                                        <button type="button" onclick="confirmarFechamento(this)" class="p-2 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition-all shadow-md active:scale-90">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    </form>
                                                <% } else { %>
                                                    <i class="fas fa-lock text-gray-300"></i>
                                                <% } %>
                                            </td>
                                        <% } %>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% } else { %>
                <div class="max-w-md mx-auto bg-white rounded-3xl shadow-2xl p-10 text-center border border-gray-100">
                    <div class="w-20 h-20 bg-gray-100 text-gray-400 rounded-full flex items-center justify-center mx-auto mb-6 text-3xl shadow-inner">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h2 class="text-2xl font-black text-gray-900 mb-4 italic">Acesso Restrito</h2>
                    <p class="text-gray-500 mb-8 font-medium italic">Não é possível visualizar o histórico sem estar logado.</p>
                    <a href="/usuarios/novo" class="block w-full py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-black rounded-2xl shadow-lg hover:shadow-indigo-200 hover:-translate-y-1 transition-all">
                        CRIAR MINHA CONTA
                    </a>
                </div>
            <% } %>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script>
        const searchInput = document.getElementById('userSearch');
        const userRole = '<%= user.role %>';
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const term = this.value.toLowerCase().trim().replace('#', '');
                const rows = document.querySelectorAll('.loan-row');
                
                rows.forEach(row => {
                    let isMatch = false;
                    const loanId = row.querySelector('.loan-id-cell').textContent.toLowerCase().replace('#', '');

                    if (userRole === 'admin') {
                        const userNameCell = row.querySelector('.user-name-cell');
                        const userName = userNameCell ? userNameCell.textContent.toLowerCase() : '';
                        isMatch = userName.includes(term) || loanId.includes(term);
                    } else {
                        const bookTitle = row.querySelector('.book-title').textContent.toLowerCase();
                        isMatch = bookTitle.includes(term) || loanId.includes(term);
                    }
                    row.style.display = isMatch ? '' : 'none';
                });
            });
        }

        function confirmarFechamento(button) {
            const form = button.closest('.form-fechar');
            Swal.fire({
                title: 'Encerrar Empréstimo?',
                text: "Confirma o recebimento e a devolução deste exemplar?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#4f46e5',
                cancelButtonColor: '#9ca3af',
                confirmButtonText: 'Sim, confirmar!',
                cancelButtonText: 'Cancelar',
                borderRadius: '1.5rem',
                customClass: {
                    popup: 'rounded-3xl',
                    confirmButton: 'rounded-xl font-bold uppercase tracking-widest text-xs px-6 py-3',
                    cancelButton: 'rounded-xl font-bold uppercase tracking-widest text-xs px-6 py-3'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
</body>
</html>