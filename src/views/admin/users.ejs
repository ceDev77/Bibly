<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bibly - Gerenciar Usuários</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <nav class="bg-gradient-to-r from-indigo-500 via-purple-500 to-indigo-600 shadow-lg sticky top-0 z-50 h-[70px]">
        <div class="max-w-7xl mx-auto px-4 h-full flex justify-between items-center">
            <div class="flex items-center text-white text-2xl font-bold">
                <i class="fas fa-book mr-3 text-3xl"></i>
                <span>Bibly</span>
            </div>
            <ul class="hidden md:flex space-x-2 items-center h-full">
                <li>
                    <a href="/" class="flex items-center gap-2 px-4 py-2 rounded-lg text-white hover:bg-white/10 transition-all">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="/livros" class="flex items-center gap-2 px-4 py-2 rounded-lg text-white hover:bg-white/10 transition-all">
                        <i class="fas fa-book-open"></i> Livros
                    </a>
                </li>
                <li>
                    <a href="/emprestimos" class="flex items-center gap-2 px-4 py-2 rounded-lg text-white hover:bg-white/10 transition-all">
                        <i class="fas fa-handshake"></i> Empréstimos
                    </a>
                </li>
                <li>
                    <a href="/devolucoes" class="flex items-center gap-2 px-4 py-2 rounded-lg text-white hover:bg-white/10 transition-all">
                        <i class="fas fa-undo"></i> Devoluções
                    </a>
                </li>
            </ul>
            <div class="flex items-center gap-3">
                <% if (typeof user !== 'undefined' && user) { %>
                    <div class="flex items-center gap-3 px-4 py-1.5 bg-yellow-400 border-2 border-orange-500 rounded-full text-black font-semibold shadow-sm">
                        <i class="fas fa-user-circle text-lg"></i>
                        <span><%= user.name %></span>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>

    <main class="flex-grow py-10">
        <div class="max-w-7xl mx-auto px-4">
            <header class="flex flex-col md:flex-row md:items-center md:justify-between mb-10 gap-6">
                <div>
                    <h1 class="text-4xl font-extrabold text-gray-900 mb-2">Gerenciar Usuários</h1>
                    <p class="text-lg text-gray-600">Controle de acessos e permissões dos membros da biblioteca.</p>
                </div>
                <a href="/usuarios/novo" class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-indigo-600 text-white font-bold rounded-xl shadow-md hover:bg-indigo-700 transition-all transform hover:-translate-y-1">
                    <i class="fas fa-user-plus"></i> Novo Usuário
                </a>
            </header>

            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead class="bg-gray-50 border-b border-gray-100">
                            <tr>
                                <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Usuário</th>
                                <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">E-mail</th>
                                <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Função</th>
                                <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            <% if (typeof users !== 'undefined' && users.length > 0) { %>
                                <% users.forEach(u => { %>
                                    <tr class="hover:bg-gray-50 transition-colors">
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 rounded-full bg-indigo-100 text-indigo-600 flex items-center justify-center font-bold">
                                                    <%= u.name.charAt(0).toUpperCase() %>
                                                </div>
                                                <span class="font-bold text-gray-900"><%= u.name %></span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 text-gray-600 italic">
                                            <%= u.email %>
                                        </td>
                                        <td class="px-6 py-4 text-center">
                                            <% if (u.role === 'admin') { %>
                                                <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-[10px] font-black uppercase tracking-tighter border border-purple-200">
                                                    Administrador
                                                </span>
                                            <% } else { %>
                                                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-[10px] font-black uppercase tracking-tighter border border-blue-200">
                                                    Leitor
                                                </span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 text-center">
                                            <div class="flex items-center justify-center gap-2">
                                                <button onclick="editUser('<%= u.id %>')" class="w-9 h-9 flex items-center justify-center bg-gray-100 text-gray-600 rounded-lg hover:bg-indigo-600 hover:text-white transition-all shadow-sm" title="Editar">
                                                    <i class="fas fa-edit text-sm"></i>
                                                </button>
                                                <button onclick="deleteUser('<%= u.id %>')" class="w-9 h-9 flex items-center justify-center bg-gray-100 text-red-500 rounded-lg hover:bg-red-500 hover:text-white transition-all shadow-sm" title="Excluir">
                                                    <i class="fas fa-trash-alt text-sm"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="px-6 py-20 text-center">
                                        <div class="flex flex-col items-center">
                                            <i class="fas fa-users text-gray-200 text-5xl mb-4"></i>
                                            <p class="text-gray-400 italic font-medium text-lg">Nenhum usuário cadastrado.</p>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <footer class="bg-gray-900 text-gray-400 py-8 mt-auto">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <p>&copy; 2026 Bibly. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script>
        function editUser(id) {
            window.location.href = '/usuarios/editar/' + id;
        }

        function deleteUser(id) {
            if (confirm('Tem certeza que deseja excluir este usuário? Esta ação não pode ser desfeita.')) {
                fetch('/usuarios/' + id, { method: 'DELETE' })
                .then(res => {
                    if (res.ok) window.location.reload();
                    else alert('Erro ao tentar excluir o usuário.');
                });
            }
        }
    </script>
</body>
</html>