<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bibly - <%= book.title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <%- include('partials/navbar') %>

    <main class="flex-grow py-10">
        <div class="max-w-7xl mx-auto px-4">
            <div class="mb-8 flex justify-between items-center">
                <a href="/livros" class="text-indigo-600 font-bold hover:underline flex items-center gap-2">
                    <i class="fas fa-arrow-left text-xs"></i> Voltar ao acervo
                </a>
            </div>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="mb-6 p-4 bg-green-100 border-l-4 border-green-500 text-green-700 flex items-center gap-3 rounded-r-xl animate-fade-in">
                    <i class="fas fa-check-circle"></i>
                    <span class="font-bold text-xs uppercase tracking-widest italic"><%= success %></span>
                </div>
            <% } %>

            <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100">
                <div class="flex flex-col lg:flex-row">
                    <div class="lg:w-1/3 bg-gray-50 p-8 flex flex-col items-center border-r border-gray-100">
                        <div class="w-64 h-96 bg-white rounded-2xl shadow-xl mb-6 overflow-hidden border-4 border-white flex items-center justify-center">
                            <% if (book.image_url) { %>
                                <img src="<%= book.image_url %>" 
                                     onerror="this.onerror=null;this.src='/images/default-book.jpg';" 
                                     alt="<%= book.title %>" 
                                     class="w-full h-full object-cover">
                            <% } else { %>
                                <div class="text-center p-6 flex flex-col items-center">
                                    <i class="fas fa-book-open text-6xl text-indigo-100 mb-4"></i>
                                    <p class="text-gray-300 font-bold italic uppercase tracking-tighter text-xs">Capa indisponível</p>
                                </div>
                            <% } %>
                        </div>
                        
                        <div class="w-full space-y-4">
                            <div class="flex justify-between items-center p-4 bg-white rounded-2xl shadow-sm">
                                <span class="text-gray-400 font-bold text-xs uppercase tracking-widest">Status</span>
                                <span class="px-3 py-1 <%= book.stock > 0 ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %> rounded-full text-xs font-black uppercase">
                                    <%= book.stock > 0 ? 'Disponível' : 'Indisponível' %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="lg:w-2/3 p-8 lg:p-12">
                        <form action="/livros/<%= book.id %>/editar" method="POST">
                            <div class="mb-8">
                                <% if (user && user.role === 'admin') { %>
                                    <div class="space-y-4">
                                        <div>
                                            <label class="block text-xs font-black text-indigo-400 uppercase tracking-widest mb-2 italic">Título do Livro</label>
                                            <input type="text" name="title" value="<%= book.title %>" class="text-4xl font-black text-gray-900 w-full bg-gray-50 border border-dashed border-indigo-200 p-2 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none italic">
                                        </div>
                                        <div>
                                            <label class="block text-xs font-black text-indigo-400 uppercase tracking-widest mb-2 italic">Autor</label>
                                            <input type="text" name="author" value="<%= book.author %>" class="text-xl font-bold text-indigo-600 w-full bg-gray-50 border border-dashed border-indigo-200 p-2 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none italic">
                                        </div>
                                        <div>
                                            <label class="block text-xs font-black text-indigo-400 uppercase tracking-widest mb-2 italic">URL da Capa (Link da Imagem)</label>
                                            <input type="text" name="image_url" value="<%= book.image_url %>" placeholder="https://exemplo.com/imagem.jpg" class="text-sm font-bold text-gray-600 w-full bg-gray-50 border border-dashed border-indigo-200 p-2 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none italic">
                                        </div>
                                        <div class="grid grid-cols-2 gap-4">
                                            <div>
                                                <label class="block text-xs font-black text-indigo-400 uppercase tracking-widest mb-2 italic">Ano</label>
                                                <input type="number" name="year" value="<%= book.year %>" class="text-lg font-bold text-gray-600 w-full bg-gray-50 border border-dashed border-indigo-200 p-2 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none italic">
                                            </div>
                                            <div>
                                                <label class="block text-xs font-black text-indigo-400 uppercase tracking-widest mb-2 italic">Estoque</label>
                                                <input type="number" name="stock" value="<%= book.stock %>" class="text-lg font-bold text-gray-600 w-full bg-gray-50 border border-dashed border-indigo-200 p-2 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none italic">
                                            </div>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <h1 class="text-5xl font-black text-gray-900 mb-2 tracking-tighter italic"><%= book.title %></h1>
                                    <p class="text-2xl font-bold text-indigo-600 mb-1 italic">por <%= book.author %></p>
                                <% } %>
                            </div>

                            <div class="flex flex-wrap gap-8 mb-10">
                                <div class="flex items-center gap-4 text-gray-600">
                                    <div class="w-10 h-10 bg-indigo-50 rounded-xl flex items-center justify-center text-indigo-500">
                                        <i class="fas fa-hashtag"></i>
                                    </div>
                                    <div>
                                        <span class="block text-xs font-black text-gray-400 uppercase tracking-widest italic">ISBN</span>
                                        <% if (user && user.role === 'admin') { %>
                                            <input type="text" name="isbn" value="<%= book.isbn %>" class="font-bold text-gray-900 bg-gray-50 border border-dashed border-indigo-200 p-1 rounded focus:ring-2 focus:ring-indigo-500 outline-none italic">
                                        <% } else { %>
                                            <span class="font-bold text-gray-900 italic"><%= book.isbn %></span>
                                        <% } %>
                                    </div>
                                </div>
                                <% if (user && user.role === 'admin') { %>
                                <div class="flex items-center gap-4 text-gray-600">
                                    <div class="w-10 h-10 bg-indigo-50 rounded-xl flex items-center justify-center text-indigo-500">
                                        <i class="fas fa-tags"></i>
                                    </div>
                                    <div>
                                        <span class="block text-xs font-black text-gray-400 uppercase tracking-widest italic">Categoria</span>
                                        <input type="text" name="category" value="<%= book.category %>" class="font-bold text-gray-900 bg-gray-50 border border-dashed border-indigo-200 p-1 rounded focus:ring-2 focus:ring-indigo-500 outline-none italic">
                                    </div>
                                </div>
                                <% } else { %>
                                    <div class="flex items-center gap-4 text-gray-600">
                                        <div class="w-10 h-10 bg-indigo-50 rounded-xl flex items-center justify-center text-indigo-500">
                                            <i class="fas fa-tags"></i>
                                        </div>
                                        <div>
                                            <span class="block text-xs font-black text-gray-400 uppercase tracking-widest italic">Categoria</span>
                                            <span class="font-bold text-gray-900 italic"><%= book.category %></span>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-4 text-gray-600">
                                        <div class="w-10 h-10 bg-indigo-50 rounded-xl flex items-center justify-center text-indigo-500">
                                            <i class="fas fa-calendar-alt"></i>
                                        </div>
                                        <div>
                                            <span class="block text-xs font-black text-gray-400 uppercase tracking-widest italic">Ano</span>
                                            <span class="font-bold text-gray-900 italic"><%= book.year %></span>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-4 text-gray-600">
                                        <div class="w-10 h-10 bg-indigo-50 rounded-xl flex items-center justify-center text-indigo-500">
                                            <i class="fas fa-boxes"></i>
                                        </div>
                                        <div>
                                            <span class="block text-xs font-black text-gray-400 uppercase tracking-widest italic">Estoque</span>
                                            <span class="font-bold text-gray-900 italic"><%= book.stock %> unidades</span>
                                        </div>
                                    </div>
                                <% } %>
                            </div>

                            <div class="prose prose-indigo max-w-none mb-12">
                                <h3 class="text-xs font-black text-gray-400 uppercase tracking-widest mb-4 italic">Sinopse e Detalhes</h3>
                                <% if (user && user.role === 'admin') { %>
                                    <textarea name="description" rows="5" class="w-full text-gray-600 leading-relaxed italic bg-gray-50 border border-dashed border-indigo-200 p-4 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none italic"><%= book.description %></textarea>
                                <% } else { %>
                                    <p class="text-gray-600 text-lg leading-relaxed italic">
                                        <%= book.description || 'Nenhuma descrição disponível para este exemplar.' %>
                                    </p>
                                <% } %>
                            </div>

                            <div class="mt-10">
                                <% if (user && user.role === 'admin') { %>
                                    <button type="submit" class="w-full py-6 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-black rounded-2xl shadow-xl hover:shadow-indigo-200 hover:-translate-y-1 transition-all active:scale-95 flex items-center justify-center gap-3 italic">
                                        <i class="fas fa-save text-xl"></i> SALVAR ALTERAÇÕES
                                    </button>
                                <% } else { %>
                                    <% if (book.stock > 0) { %>
                                        <button type="button" onclick="handleLoanAction()" class="group relative w-full lg:w-auto px-12 py-6 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-black rounded-2xl shadow-xl hover:shadow-indigo-200 transition-all hover:-translate-y-1 active:scale-95 italic flex items-center justify-center gap-3">
                                            SOLICITAR EMPRÉSTIMO <i class="fas fa-hand-holding-heart text-xl"></i>
                                        </button>
                                    <% } else { %>
                                        <button disabled class="w-full lg:w-auto px-12 py-6 bg-gray-200 text-gray-400 font-black rounded-2xl cursor-not-allowed italic uppercase">
                                            EXEMPLAR INDISPONÍVEL
                                        </button>
                                    <% } %>
                                <% } %>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div id="loanModal" class="fixed inset-0 bg-gray-900/80 backdrop-blur-sm z-[100] hidden items-center justify-center p-4">
            <div class="bg-white w-full max-w-lg rounded-3xl shadow-2xl overflow-hidden border border-gray-100 transform transition-all">
                <div class="p-8">
                    <div id="modalStepSelection" class="<%= (typeof loanId !== 'undefined') ? 'hidden' : '' %>">
                        <div class="flex justify-between items-start mb-6">
                            <div>
                                <h2 class="text-3xl font-black text-gray-900 italic tracking-tighter italic">Duração do Empréstimo</h2>
                                <p class="text-gray-500 font-medium italic">Quanto tempo você deseja ficar com o livro?</p>
                            </div>
                            <button onclick="closeLoanModal()" class="text-gray-400 hover:text-gray-600 transition-colors">
                                <i class="fas fa-times text-2xl"></i>
                            </button>
                        </div>

                        <form id="loanForm" action="/emprestimos" method="POST" class="space-y-6">
                            <input type="hidden" name="bookId" value="<%= book.id %>">
                            
                            <div class="grid grid-cols-2 gap-4">
                                <% [1, 2, 3, 4].forEach(w => { %>
                                    <label class="relative cursor-pointer group">
                                        <input type="radio" name="weeks" value="<%= w %>" <%= w === 1 ? 'checked' : '' %> class="peer sr-only" onclick="updatePrice(<%= w %>)">
                                        <div class="p-4 bg-gray-50 border-2 border-transparent rounded-2xl text-center transition-all peer-checked:border-indigo-600 peer-checked:bg-indigo-50 group-hover:bg-gray-100">
                                            <span class="block text-2xl font-black text-gray-900"><%= w %></span>
                                            <span class="text-xs font-bold text-gray-400 uppercase tracking-widest italic"><%= w === 1 ? 'Semana' : 'Semanas' %></span>
                                        </div>
                                    </label>
                                <% }) %>
                            </div>

                            <div class="p-6 bg-indigo-600 rounded-2xl shadow-xl text-center">
                                <p class="text-indigo-200 text-xs font-black uppercase tracking-widest mb-1 italic">Total a pagar na retirada</p>
                                <p id="loanPrice" class="text-4xl font-black text-white italic">R$ 5,00</p>
                                <p class="text-indigo-200 text-[10px] font-bold uppercase mt-2 italic">Multa: R$ 2,00 / dia de atraso</p>
                            </div>

                            <div class="flex gap-4">
                                <button type="button" onclick="closeLoanModal()" class="flex-1 py-4 bg-gray-100 text-gray-500 font-black rounded-2xl hover:bg-gray-200 transition-all italic">CANCELAR</button>
                                <button type="submit" class="flex-1 py-4 bg-indigo-600 text-white font-black rounded-2xl shadow-lg hover:bg-indigo-700 transition-all italic">CONFIRMAR</button>
                            </div>
                        </form>
                    </div>

                    <div id="modalStepSuccess" class="<%= (typeof loanId !== 'undefined') ? '' : 'hidden' %> text-center">
                        <div class="w-20 h-20 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-6 text-4xl shadow-inner">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <h2 class="text-3xl font-black text-gray-900 mb-2 italic tracking-tighter italic">Empréstimo Realizado!</h2>
                        <p class="text-gray-500 font-medium mb-8 italic">Apresente o código abaixo para retirar o livro.</p>
                        <div class="bg-indigo-50 rounded-2xl p-6 mb-8 border-2 border-dashed border-indigo-200">
                            <p class="text-4xl font-mono font-black text-indigo-700">
                                #<%= (typeof loanId !== 'undefined') ? loanId.toString().padStart(5, '0') : '' %>
                            </p>
                        </div>
                        <div class="space-y-4">
                            <a href="/emprestimos" class="block w-full py-4 bg-indigo-600 text-white font-black rounded-2xl shadow-lg hover:bg-indigo-700 transition-all italic">MEUS EMPRÉSTIMOS</a>
                            <button onclick="closeLoanModal()" class="text-gray-400 font-bold hover:text-gray-600 transition-colors uppercase text-xs tracking-widest italic">FECHAR</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script>
        const isLoggedIn = <%= (typeof user !== 'undefined' && user && user.name !== 'Visitante') ? 'true' : 'false' %>;
        const hasLoanSuccess = <%= (typeof loanId !== 'undefined') ? 'true' : 'false' %>;
        window.onload = function() {
            if (hasLoanSuccess) {
                openLoanModal();
            }
        };

        function handleLoanAction() {
            if (!isLoggedIn) {
                window.location.href = '/login';
            } else {
                document.getElementById('modalStepSelection').classList.remove('hidden');
                document.getElementById('modalStepSuccess').classList.add('hidden');
                openLoanModal();
            }
        }

        function openLoanModal() {
            document.getElementById('loanModal').classList.remove('hidden');
            document.getElementById('loanModal').classList.add('flex');
        }

        function closeLoanModal() {
            document.getElementById('loanModal').classList.add('hidden');
            document.getElementById('loanModal').classList.remove('flex');
            if (hasLoanSuccess) {
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        }

        function updatePrice(weeks) {
            const price = weeks * 5;
            document.getElementById('loanPrice').innerText = `R$ ${price.toFixed(2).replace('.', ',')}`;
        }
    </script>
</body>
</html>