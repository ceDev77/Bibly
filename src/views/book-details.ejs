<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bibly - <%= book.title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <%- include('partials/navbar') %>

    <main class="flex-grow py-10">
        <div class="max-w-7xl mx-auto px-4">
            <div class="mb-8 flex justify-between items-center">
                <a href="/livros" class="text-indigo-600 font-bold hover:underline flex items-center gap-2">
                    <i class="fas fa-arrow-left text-xs"></i> Voltar ao acervo
                </a>
            </div>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="mb-6 p-4 bg-green-100 border-l-4 border-green-500 text-green-700 flex items-center gap-3 rounded-r-xl animate-fade-in">
                    <i class="fas fa-check-circle"></i>
                    <span class="font-bold"><%= success %></span>
                </div>
            <% } %>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="mb-6 p-4 bg-red-100 border-l-4 border-red-500 text-red-700 flex items-center gap-3 rounded-r-xl">
                    <i class="fas fa-exclamation-circle"></i>
                    <span class="font-bold"><%= error %></span>
                </div>
            <% } %>

            <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100">
                <div class="flex flex-col lg:flex-row">
                    <div class="lg:w-1/3 bg-gray-50 p-8 flex items-center justify-center border-b lg:border-b-0 lg:border-r border-gray-100">
                        <div class="relative group">
                            <div class="w-64 h-96 bg-white rounded-2xl shadow-2xl border border-gray-100 flex items-center justify-center overflow-hidden">
                                <% if (book.image_url) { %>
                                    <img src="<%= book.image_url %>" alt="<%= book.title %>" class="w-full h-full object-cover">
                                <% } else { %>
                                    <div class="text-center p-6">
                                        <i class="fas fa-book-open text-6xl text-indigo-100 mb-4"></i>
                                        <p class="text-gray-300 font-bold italic uppercase tracking-tighter">Capa indisponível</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="lg:w-2/3 p-8 lg:p-12">
                        <form action="/livros/<%= book.id %>/editar" method="POST">
                            <div class="mb-8">
                                <% if (user && user.role === 'admin') { %>
                                    <div class="space-y-4">
                                        <div>
                                            <label class="block text-xs font-black text-indigo-400 uppercase tracking-widest mb-2">Título do Livro</label>
                                            <input type="text" name="title" value="<%= book.title %>" class="text-4xl font-black text-gray-900 w-full bg-gray-50 border border-dashed border-indigo-200 p-2 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none">
                                        </div>
                                        <div>
                                            <label class="block text-xs font-black text-indigo-400 uppercase tracking-widest mb-2">Autor</label>
                                            <input type="text" name="author" value="<%= book.author %>" class="text-xl font-bold text-indigo-600 w-full bg-gray-50 border border-dashed border-indigo-200 p-2 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none">
                                        </div>
                                        <div>
                                            <label class="block text-xs font-black text-indigo-400 uppercase tracking-widest mb-2">Ano de Lançamento</label>
                                            <input type="number" name="year" value="<%= book.year %>" class="text-lg font-bold text-gray-600 w-full bg-gray-50 border border-dashed border-indigo-200 p-2 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none">
                                        </div>
                                    </div>
                                <% } else { %>
                                    <h1 class="text-5xl font-black text-gray-900 mb-2 tracking-tight italic"><%= book.title %></h1>
                                    <p class="text-2xl font-bold text-indigo-600 mb-1 italic">por <%= book.author %></p>
                                    <p class="text-lg text-gray-400 font-medium italic"><%= book.year %></p>
                                <% } %>
                            </div>

                            <div class="flex flex-wrap gap-8 mb-10">
                                <div class="flex items-center gap-4 text-gray-600">
                                    <div class="w-10 h-10 bg-indigo-50 rounded-xl flex items-center justify-center text-indigo-500">
                                        <i class="fas fa-tags"></i>
                                    </div>
                                    <div>
                                        <span class="block text-xs font-black text-gray-400 uppercase tracking-widest">Categoria</span>
                                        <% if (user && user.role === 'admin') { %>
                                            <input type="text" name="category" value="<%= book.category %>" class="font-bold text-gray-900 bg-gray-50 border border-dashed border-indigo-200 p-1 rounded focus:ring-2 focus:ring-indigo-500 outline-none">
                                        <% } else { %>
                                            <span class="font-bold text-gray-900 italic"><%= book.category %></span>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="flex items-center gap-4 text-gray-600">
                                    <div class="w-10 h-10 bg-indigo-50 rounded-xl flex items-center justify-center text-indigo-500">
                                        <i class="fas fa-hashtag"></i>
                                    </div>
                                    <div>
                                        <span class="block text-xs font-black text-gray-400 uppercase tracking-widest">ISBN</span>
                                        <% if (user && user.role === 'admin') { %>
                                            <input type="text" name="isbn" value="<%= book.isbn %>" class="font-bold text-gray-900 bg-gray-50 border border-dashed border-indigo-200 p-1 rounded focus:ring-2 focus:ring-indigo-500 outline-none">
                                        <% } else { %>
                                            <span class="font-bold text-gray-900 italic"><%= book.isbn %></span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <div class="prose prose-indigo max-w-none mb-12">
                                <h3 class="text-sm font-black text-gray-400 uppercase tracking-widest mb-4">Sinopse e Detalhes</h3>
                                <% if (user && user.role === 'admin') { %>
                                    <textarea name="description" rows="5" class="w-full text-gray-600 leading-relaxed italic bg-gray-50 border border-dashed border-indigo-200 p-4 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none"><%= book.description %></textarea>
                                <% } else { %>
                                    <p class="text-gray-600 leading-relaxed italic font-medium">
                                        <%= book.description || 'Nenhuma descrição disponível para este exemplar.' %>
                                    </p>
                                <% } %>
                            </div>

                            <div class="bg-indigo-50/50 rounded-2xl p-8 border border-indigo-100/50">
                                <h3 class="text-sm font-bold text-indigo-400 uppercase tracking-widest mb-6">Estado do Acervo</h3>
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 text-center">
                                    <div>
                                        <span class="block text-sm text-indigo-600 font-medium mb-1">Status</span>
                                        <span class="text-2xl font-black <%= book.stock > 0 ? 'text-green-600' : 'text-red-600' %>">
                                            <%= book.stock > 0 ? 'Disponível' : 'Esgotado' %>
                                        </span>
                                    </div>
                                    <div>
                                        <span class="block text-sm text-indigo-600 font-medium mb-1">Unidades em Estoque</span>
                                        <% if (user && user.role === 'admin') { %>
                                            <input type="number" name="stock" value="<%= book.stock %>" class="text-2xl font-black text-indigo-900 w-24 text-center bg-white border border-indigo-200 rounded-lg">
                                        <% } else { %>
                                            <span class="text-2xl font-black text-indigo-900"><%= book.stock %></span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-10">
                                <% if (user && user.role === 'admin') { %>
                                    <button type="submit" class="w-full py-6 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-black rounded-2xl shadow-xl hover:shadow-indigo-200 hover:-translate-y-1 transition-all active:scale-95 flex items-center justify-center gap-3">
                                        <i class="fas fa-save text-xl"></i> SALVAR ALTERAÇÕES
                                    </button>
                                <% } else { %>
                                    <% if (book.stock > 0) { %>
                                        <button type="button" onclick="handleLoanAction()" class="w-full py-6 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-black rounded-2xl shadow-xl hover:shadow-indigo-200 hover:-translate-y-1 transition-all active:scale-95 flex items-center justify-center gap-3">
                                            <i class="fas fa-hand-holding-heart text-xl"></i> SOLICITAR EMPRÉSTIMO
                                        </button>
                                    <% } else { %>
                                        <button disabled class="w-full py-6 bg-gray-200 text-gray-400 font-black rounded-2xl cursor-not-allowed flex items-center justify-center gap-3">
                                            <i class="fas fa-times-circle text-xl"></i> EXEMPLAR INDISPONÍVEL
                                        </button>
                                    <% } %>
                                <% } %>
                            </div>
                        </form>

                        <div id="loanModal" class="fixed inset-0 bg-black/60 z-[100] hidden items-center justify-center p-4">
                            <div class="bg-white rounded-3xl max-w-lg w-full p-8 shadow-2xl animate-fade-in">
                                <h2 class="text-3xl font-black text-gray-900 italic mb-6">Duração do Empréstimo</h2>
                                <p class="text-gray-500 font-medium mb-8">Por quanto tempo você deseja ficar com "<%= book.title %>"?</p>
                                
                                <form id="loanForm" action="/emprestimos" method="POST" class="space-y-4">
                                    <input type="hidden" name="book_id" value="<%= book.id %>">
                                    
                                    <div class="grid grid-cols-2 gap-4">
                                        <label class="relative block cursor-pointer group">
                                            <input type="radio" name="weeks" value="1" class="peer hidden" checked onchange="updatePrice(1)">
                                            <div class="p-4 border-2 border-gray-100 rounded-2xl peer-checked:border-indigo-600 peer-checked:bg-indigo-50 transition-all text-center">
                                                <span class="block font-black text-gray-900 italic">1 Semana</span>
                                            </div>
                                        </label>
                                        <label class="relative block cursor-pointer group">
                                            <input type="radio" name="weeks" value="2" class="peer hidden" onchange="updatePrice(2)">
                                            <div class="p-4 border-2 border-gray-100 rounded-2xl peer-checked:border-indigo-600 peer-checked:bg-indigo-50 transition-all text-center">
                                                <span class="block font-black text-gray-900 italic">2 Semanas</span>
                                            </div>
                                        </label>
                                        <label class="relative block cursor-pointer group">
                                            <input type="radio" name="weeks" value="3" class="peer hidden" onchange="updatePrice(3)">
                                            <div class="p-4 border-2 border-gray-100 rounded-2xl peer-checked:border-indigo-600 peer-checked:bg-indigo-50 transition-all text-center">
                                                <span class="block font-black text-gray-900 italic">3 Semanas</span>
                                            </div>
                                        </label>
                                        <label class="relative block cursor-pointer group">
                                            <input type="radio" name="weeks" value="4" class="peer hidden" onchange="updatePrice(4)">
                                            <div class="p-4 border-2 border-gray-100 rounded-2xl peer-checked:border-indigo-600 peer-checked:bg-indigo-50 transition-all text-center">
                                                <span class="block font-black text-gray-900 italic">4 Semanas</span>
                                            </div>
                                        </label>
                                    </div>

                                    <div class="bg-gray-50 rounded-2xl p-6 my-6 border border-gray-100">
                                        <div class="flex justify-between items-center mb-2">
                                            <span class="text-sm font-bold text-gray-400 uppercase italic">Valor do Empréstimo</span>
                                            <span id="loanPrice" class="text-xl font-black text-indigo-600">R$ 5,00</span>
                                        </div>
                                        <div class="flex justify-between items-center text-red-500">
                                            <span class="text-[10px] font-black uppercase italic tracking-widest">Multa por atraso</span>
                                            <span class="text-xs font-bold">R$ 2,00 / dia</span>
                                        </div>
                                    </div>

                                    <div class="flex gap-4">
                                        <button type="button" onclick="closeLoanModal()" class="flex-1 py-4 bg-gray-100 text-gray-500 font-black rounded-2xl hover:bg-gray-200 transition-all italic">CANCELAR</button>
                                        <button type="submit" class="flex-1 py-4 bg-indigo-600 text-white font-black rounded-2xl shadow-lg hover:bg-indigo-700 transition-all italic">CONFIRMAR</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script>
        const isLoggedIn = <%= (typeof user !== 'undefined' && user && user.name !== 'Visitante') ? 'true' : 'false' %>;

        function handleLoanAction() {
            if (!isLoggedIn) {
                window.location.href = '/login';
            } else {
                openLoanModal();
            }
        }

        function openLoanModal() {
            document.getElementById('loanModal').classList.remove('hidden');
            document.getElementById('loanModal').classList.add('flex');
        }

        function closeLoanModal() {
            document.getElementById('loanModal').classList.add('hidden');
            document.getElementById('loanModal').classList.remove('flex');
        }

        function updatePrice(weeks) {
            const price = weeks * 5;
            document.getElementById('loanPrice').innerText = `R$ ${price.toFixed(2).replace('.', ',')}`;
        }
    </script>
</body>
</html>